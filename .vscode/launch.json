{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },

        {
            "name": "Python Debugger: Deploy",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "--env=${input:argValue}"
              ]
        },
        
        {
          "name": "Python Debugger: Pull Logs",
          "type": "debugpy",
          "request": "launch",
          "program": "${file}",
          "console": "integratedTerminal",
          "args": [
              "--env=${input:logPullEnvValue}",
              "--start=${input:startValue}",
              "--end=${input:endValue}",
              "--limit=${input:limitValue}"
            ]
        }, 
      
        {
          "name": "Python Debugger: Start Dev Box",
          "type": "debugpy",
          "request": "launch",
          "program": "${file}",
          "console": "integratedTerminal",
          "args": [
              "--token_list_rebuild_frequency=${input:tokenListRebuildFrequencyValue}"
            ]
        },       

        {
            "name": "Wrangler",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "cwd": "/",
            "resolveSourceMapLocations": null,
            "attachExistingChildren": false,
            "autoAttachChildProcesses": false,
            "trace": true
        },

        {
            "type": "node",
            "request": "launch",
            "name": "Jest: current file",
            //"env": { "NODE_ENV": "test" },
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": ["${fileBasenameNoExtension}", "--config", "jest.config.ts"],
            "console": "integratedTerminal",
            "windows": {
              "program": "${workspaceFolder}/node_modules/jest/bin/jest"
            }
        },
          
        {
          "name": "Attach 5678: Sim Fake TG",
          "type": "debugpy",
          "request": "attach",
          "connect": {
              "host": "localhost",
              "port": 5678
          }
        },
        {
            "name": "Attach 5679: Sim Filewatcher",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5679
            }
        },

        {
            "name": "Attach 5680: Spin Up Users",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5680
            }
        },
        {
            "name": "Attach 5681: Simulated User",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5681
            }
        },
        {
          "name": "Attach 5682: Run Sim",
          "type": "debugpy",
          "request": "attach",
          "connect": {
              "host": "localhost",
              "port": 5682
          }
        }

    ],
    "inputs": [
        {
          "id": "argValue",
          "type": "promptString",
          "description": "Enter the value:",
          "default": "dev"
        },
        {
          "id": "logPullEnvValue",
          "type": "promptString",
          "description": "Enter the start datetime:",
          "default": "beta"
        },
        {
          "id": "startValue",
          "type": "promptString",
          "description": "Enter the start datetime:",
          "default": "2024-04-01"
        },
        {
          "id": "endValue",
          "type": "promptString",
          "description": "Enter the end datetime:",
          "default": ""
        }, 
        {
          "id": "limitValue",
          "type": "promptString",
          "description": "Enter the limit (optional):",
          "default": ""
        },
        {
          "id": "tokenListRebuildFrequencyValue",
          "type": "promptString",
          "description": "Enter the CRON seconds for token list rebuild:",
          "default": ""          
        }                      
    ]
}